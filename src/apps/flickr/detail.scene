<scene>
  <component class="tau.ui.LinkUrl" id="flickrlink" title="@_item.author" subTitle="@_item.published" url="@_item.link">
    <attr name="style">
      <param value="height"/>
      <param value="50px"/>
    </attr>
  </component>
  <component class="tau.ui.TextView" id="flickrtext" text="@_item.description">
    <attr name="styles">
      <map top="50px" height="370px"/>
    </attr>
  </component>
</scene>