<?xml version="1.0" encoding="UTF-8"?>
<Scene xmlns="http://www.ktinnotz.com/tau/scene" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	viewPortWidth="320px" viewPortHeight="450px">
	<ScrollPanel>
		<ScrollPanel.options hScroll="false" />
		<ScrollPanel.styles backgroundRepeat="repeat"
			backgroundImage="transparent" />
		<Label text="상품명 : ">
			<Label.styles fontSize="12px" color="pink" />
		</Label>
		<Label text="@model.name">
			<Label.styles fontSize="12px" color="pink" />
		</Label>
		<Label text="가격 :">
			<Label.styles fontSize="12px" color="midnightBlue" />
		</Label>
		<Label text="@model.price">
			<Label.styles fontSize="12px" color="midnightBlue" />
		</Label>
		<ImageView src="@appCtx.getRealPath('/img/' + this.model.detail_img)">
			<ImageView.styles maxWidth="95%" height="auto"
				margin="2%" />
		</ImageView>
		<TextView text="@model.detail">
			<TextView.option vScroll="false" />
			<TextView.styles fontSize="12px" backgroundColor="#ffffff"
				height="auto" />
		</TextView>

	</ScrollPanel>
</Scene>